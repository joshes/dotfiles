# Make vim the default editor
export EDITOR="vim"

# Larger bash history (allow 32³ entries; default is 500)
export HISTSIZE=32768
export HISTFILESIZE=$HISTSIZE
export HISTCONTROL=ignoredups
# Make some commands not show up in history
export HISTIGNORE="ls:cd:cd -:pwd:exit:date:* --help"

# Prefer US English and use UTF-8
export LANG="en_US"
export LC_ALL="en_US.UTF-8"

# Highlight section titles in manual pages
export LESS_TERMCAP_md="$ORANGE"

# Don’t clear the screen after quitting a manual page
export MANPAGER="less -X"

# Always enable colored `grep` output
export GREP_OPTIONS="--color=auto"

# Link Homebrew casks in `/Applications` rather than `~/Applications`
export HOMEBREW_CASK_OPTS="--appdir=/Applications"

# `brewpath` finds the latest installed version (not the active version)
# example usage: cd $(brewpath mongodb)
function brewpath() {
	local path=`brew --cellar`
	path+="/$1/"
	path+=`ls -v "$path" | tail -n 1`
	echo $path
}

export MONGO_HOME=$(brewpath mongodb)
export SCALA_HOME=$(brewpath scala)
export ANDROID_HOME=$(brewpath android-sdk)
export MAVEN_OPTS="-Xmx1024g -XX:+CMSClassUnloadingEnabled -XX:+HeapDumpOnOutOfMemoryError"
export SBT_HOME=$(brewpath sbt)
export PLAY_HOME=$(brewpath play)
export SBT_OPTS="-XX:+CMSClassUnloadingEnabled -Xmx1024m -XX:+HeapDumpOnOutOfMemoryError -Dfile.encoding=utf-8"
export M3_HOME=$(brewpath maven)
export GRADLE_HOME=$(brewpath gradle)/libexec
export GROOVY_HOME=$(brewpath groovy)
export CQ_HOME=~/Servers/cq5
export CQ_AUTHOR_HOME=${CQ_HOME}/author
export CQ_PUBLISH_HOME=${CQ_HOME}/publish
export JAVA_HOME=/Library/Java/JavaVirtualMachines/jdk1.7.0_45.jdk/Contents/Home
export GOPATH=$(brewpath go)
export GRADLE_OPTS="-Xmx1024m -Dfile.encoding=utf-8"

# TODO move scripts to dotfiles repo and link
export PATH=~/Scripts:$PATH
export PATH=~/Applications/jad:$PATH
export PATH=~/Scripts/dex2jar-0.0.9.13:$PATH

export PATH=$SCALA_HOME/bin:$PATH
export PATH=$PLAY_HOME/bin:$PATH
export PATH=$MONGO_HOME/bin:$PATH
export PATH=$ANDROID_HOME/tools:$ANDROID_HOME/platform-tools:$PATH
export PATH=$M2_HOME/bin:$PATH
export PATH=~/bin:$PATH
