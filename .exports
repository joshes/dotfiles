# Make vim the default editor
export EDITOR="vim"

# Larger bash history (allow 32³ entries; default is 500)
export HISTSIZE=32768
export HISTFILESIZE=$HISTSIZE
export HISTCONTROL=ignoredups
# Make some commands not show up in history
export HISTIGNORE="ls:cd:cd -:pwd:exit:date:* --help"

# Prefer US English and use UTF-8
export LANG="en_US"
export LC_ALL="en_US.UTF-8"

# Highlight section titles in manual pages
export LESS_TERMCAP_md="$ORANGE"

# Don’t clear the screen after quitting a manual page
export MANPAGER="less -X"

# Always enable colored `grep` output
export GREP_OPTIONS="--color=auto"

# Link Homebrew casks in `/Applications` rather than `~/Applications`
export HOMEBREW_CASK_OPTS="--appdir=/Applications"

CELLAR=`brew --cellar`

export MONGO_HOME=${CELLAR}/mongodb/2.4.6
export SCALA_HOME=${CELLAR}/scala/2.10.3
export ANDROID_HOME=${CELLAR}/android-sdk/22.2.1
export MAVEN_OPTS="-Xmx512m -XX:MaxPermSize=256m"
export SBT_HOME=${CELLAR}/sbt/0.13.0
export PLAY_HOME=${CELLAR}/play/2.2.1
export SBT_OPTS="-XX:+CMSClassUnloadingEnabled -XX:MaxPermSize=256m -Xmx512m"
export M3_HOME=${CELLAR}/maven/3.1.1
export GRADLE_HOME=${CELLAR}/gradle/1.8/libexec
export GROOVY_HOME=${CELLAR}/groovy/2.1.8
export CQ_HOME=~/Servers/cq5
export CQ_AUTHOR_HOME=${CQ_HOME}/author
export CQ_PUBLISH_HOME=${CQ_HOME}/publish
export JAVA_HOME=/Library/Java/Home
export GOROOT=${CELLAR}/go/1.1.2
export GOPATH=$GOROOT

export PATH=~/Scripts:~/Applications/jad:~/Scripts/dex2jar-0.0.9.13:$PATH
export PATH=$SCALA_HOME/bin:$PATH
export PATH=$PLAY_HOME/bin:$PATH
export PATH=$MONGO_HOME/bin:$PATH
export PATH=$ANDROID_HOME/tools:$ANDROID_HOME/platform-tools:$PATH
export PATH=$M2_HOME/bin:$PATH
export PATH=~/bin:$PATH
export PATH=$GRADLE_HOME/bin:$PATH
export PATH=$GROOVY_HOME/bin:$PATH
export PATH=/usr/local/bin:$PATH
export PATH=/usr/local/share/python:$PATH
export PATH=/usr/local/sbin:$PATH
export PATH=$GOROOT:$GOROOT/bin:$PATH

export PYTHONPATH=/usr/local/lib/python:$PYTHONPATH